<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HikingHelperNI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>
    <style name="Theme.SignIn" parent="Theme.AppCompat.Light">
        <!--Changing Sign In UI to follow colour scheme of app-->
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--Changing Overflow Icon styling to act as user profile menu-->
    <style name="OverFlow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:src">@drawable/ic_profile_black_24dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>